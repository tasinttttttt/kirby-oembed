[*.{css,scss,less,js,json,ts,sass,html,hbs,mustache,phtml,html.twig,vue,yml}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.php]
indent_size = 4
indent_style = space

[package.json,.{babelrc,editorconfig,eslintrc,lintstagedrc,stylelintrc}]
indent_size = 2
indent_style = space
